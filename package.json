{
  "name": "buddy",
  "version": "1.0.0",
  "description": "Search and adopt a pet",
  "main": "src/App.js",
  "scripts": {
    "test": "jest --silent",
    "format": "prettier --write \"src/**/*.{js,jsx}\"",
    "lint": "eslint \"src/**/*.{js,jsx}\" --quiet",
    "dev": "parcel src/index.html",
    "build:client": "parcel build --public-url ./dist/ src/index.html -d dist/client",
    "build:server": "parcel build --public-url ./dist/ server/index.js -d dist/server --target=node",
    "build": "npx rimraf dist && npm run build:client && npm run build:server",
    "serve": "node dist/server",
    "start": "npm run build && npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/penumbra1/buddy.git"
  },
  "author": "Olga Isakova <penumbral@yandex.ru>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/penumbra1/buddy/issues"
  },
  "homepage": "https://github.com/penumbra1/buddy#readme",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@emotion/babel-preset-css-prop": "^10.0.5",
    "acorn": "^7.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.9.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.12.1",
    "jest": "^24.9.0",
    "jest-emotion": "^10.0.5",
    "parcel-bundler": "^1.11.0",
    "parcel-plugin-bundle-visualiser": "^1.2.0",
    "parcel-plugin-compress": "^1.0.6",
    "prettier": "^1.15.3",
    "react-test-renderer": "^16.7.0",
    "rimraf": "^3.0.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "@emotion/core": "^10.0.5",
    "@emotion/styled": "^10.0.5",
    "@reach/router": "^1.2.1",
    "@svgr/parcel-plugin-svgr": "^4.1.0",
    "algoliasearch": "^3.32.0",
    "color": "^3.1.0",
    "emotion": "^10.0.5",
    "emotion-server": "^10.0.5",
    "express": "^4.16.4",
    "express-static-gzip": "^2.0.5",
    "focus-visible": "^5.0.2",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "petfinder-client": "^1.0.2",
    "react": "^16.7.0",
    "react-autosuggest": "^9.4.2",
    "react-dom": "^16.7.0",
    "react-lazy-images": "^1.1.0",
    "react-loadable": "^5.5.0",
    "react-redux": "^7.1.3",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "compress": {
    "test": "client/.*\\.js",
    "threshold": 5120
  }
}
